{
  "name": "pwl",
  "displayName": "PWL",
  "description": "摸鱼派客户端",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.62.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:pwl.helloWorld"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "pwl.helloWorld",
        "title": "Hello World"
      }
    ],
    "viewsContainers": {
			"activitybar": [
				{
					"id": "pwl-chat-view",
					"title": "摸魚派聊天室",
					"icon": "src/assets/logo.svg"
				}
			]
		},
		"views": {
			"pwl-chat-view": [
				{
					"id": "pwl-chat",
					"name": "摸魚派聊天室",
					"icon": "src/assets/logo.svg"
				}
			]
		}
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.62.0",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "@vscode/test-electron": "^1.6.2",
    "eslint": "^8.1.0",
    "glob": "^7.1.7",
    "mocha": "^9.1.3",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "formdata-node": "^4.3.1",
    "node-fetch": "^3.1.0"
  }
}
