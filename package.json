{
  "name": "pwl-chat",
  "displayName": "摸鱼派聊天室",
  "description": "随时随地摸鱼聊天 https://pwl.icu/",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.62.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:pwl-chat.chatView",
    "onCommand:pwl-chat.login"
  ],
  "publisher": "hancel",
  "license": "MIT",
  "icon": "media/logo.png",
  "main": "./out/extension.js",
  "repository": "https://github.com/imlinhanchao/vsc-pwl-chat",
  "contributes": {
    "commands": [
      {
        "command": "pwl-chat.login",
        "title": "登录摸鱼派(PWL Chatroom Login)"
      },
      {
        "command": "pwl-chat.logout",
        "title": "摸鱼派注销登录(PWL Chatroom Logout)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "pwl-chat-view",
          "title": "摸鱼派聊天室",
          "icon": "src/assets/logo.svg"
        }
      ]
    },
    "views": {
      "pwl-chat-view": [
        {
          "id": "pwl-chat.chatView",
          "name": "摸鱼派聊天室",
          "type": "webview"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile && npm run build",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build"
  },
  "devDependencies": {
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.62.0",
    "@types/ws": "^8.2.2",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "@vscode/test-electron": "^1.6.2",
    "@vue/cli-plugin-babel": "~4.5.0",
    "@vue/cli-plugin-eslint": "~4.5.0",
    "@vue/cli-service": "~4.5.0",
    "babel-eslint": "^10.1.0",
    "core-js": "^3.6.5",
    "eslint": "^6.7.2",
    "eslint-plugin-vue": "^6.2.2",
    "glob": "^7.1.7",
    "less-loader": "^5.0.0",
    "mocha": "^9.1.3",
    "typescript": "^4.4.4",
    "vue": "^2.6.11",
    "vue-template-compiler": "^2.6.11"
  },
  "dependencies": {
    "axios": "^0.24.0",
    "formdata-node": "^4.3.1",
    "got": "^11.8.3",
    "got-fetch": "^4.0.1",
    "reconnecting-websocket": "^4.4.0",
    "ws": "^8.3.0"
  }
}
